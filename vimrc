execute pathogen#infect()

filetype plugin indent on
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set number
set showcmd
set showmatch

set pastetoggle=<F2>

syntax enable
set background=dark
colorscheme solarized

set laststatus=2

" http://www.bestofvim.com/tip/trailing-whitespace/
match ErrorMsg '\s\+$'
